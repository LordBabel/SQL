-- Query to retrieve all car data with manufacturer names
SELECT 
    c.Name AS CarName,
    m.Name AS Manufacturer,
    c.TopSpeed_MPH,
    c.Acceleration_0_60,
    cd.Description
FROM 
    Cars c
JOIN 
    CarDetails cd ON c.CarID = cd.CarID
JOIN 
    Manufacturers m ON c.ManufacturerID = m.ManufacturerID;
